<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/routines_mainL"
    android:background="@color/colorLightWhite"
    tools:context="com.example.j_spu.frenchpress.TabHome">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:fitsSystemWindows="true"
        tools:context="com.example.owner.frenchpress.MainActivity">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:padding="10dp"
            android:elevation="2dp"
            android:id="@+id/top_container"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/txt_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:shadowColor="@color/colorDarkGrey"
                android:fontFamily="sans-serif-medium"
                android:shadowDy="3"
                android:text="Hello, John"
                android:textColor="@color/colorLightWhite"
                android:textSize="36sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linLayoutNxtRoutine"
                android:orientation="horizontal"
                android:layout_below="@+id/txt_page"
                android:padding="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorLightWhite"
                    android:text="@string/next_routine"
                    android:layout_weight="0.3"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="24dp"
                    android:textColor="@color/colorLightWhite"
                    android:text="Tomorrow Morning at 7:30 AM"
                    android:layout_weight="0.70"/>


            </LinearLayout>

        </RelativeLayout>

        <!--Layout for the home screen info-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_container"
            android:orientation="vertical"
            android:background="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp">

                // coffee levels card
                <android.support.v7.widget.CardView
                    android:id="@+id/coffee_levels_card"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:padding="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="4dp"
                    app:cardCornerRadius="8dp"
                    android:elevation="8dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/icons8_java_bean_528"
                            android:scaleX="1"
                            android:scaleY="1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight=".5"
                            android:textSize="15sp"
                            android:layout_gravity="center"
                            android:textColor="@color/colorPrimary"
                            android:text="coffee info"
                            android:textAlignment="center"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                // water levels card
                <android.support.v7.widget.CardView
                    android:id="@+id/water_levels_card"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:padding="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="8dp"
                    android:elevation="8dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/icons8_water_80"
                            android:scaleY="1.5"
                            android:scaleX="1.5"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight=".5"
                            android:textSize="15sp"
                            android:layout_gravity="center"
                            android:textColor="@color/colorPrimary"
                            android:text="water info"
                            android:textAlignment="center"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:paddingLeft="16dp"
                android:paddingBottom="16dp"
                android:paddingRight="16dp">

                // Machine Status
                <android.support.v7.widget.CardView
                    android:id="@+id/machine_status_card"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:padding="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="8dp"
                    android:elevation="8dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/icons8_french_press_80"
                            android:scaleX="2"
                            android:scaleY="2"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight=".5"
                            android:textSize="15sp"
                            android:layout_gravity="center"
                            android:textColor="@color/colorPrimary"
                            android:text="Machine info"
                            android:textAlignment="center"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                // possible fourth card
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:padding="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="8dp"
                    android:elevation="8dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/icons8_water_80"
                            android:scaleX="1.5"
                            android:scaleY="1.5"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight=".5"
                            android:textSize="15sp"
                            android:layout_gravity="center"
                            android:textColor="@color/colorPrimary"
                            android:text="info"
                            android:textAlignment="center"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>



    </RelativeLayout>
</FrameLayout>