<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/routines_mainL"
    android:background="@color/colorLightWhite"
    tools:context="com.example.j_spu.frenchpress.TabHome">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:fitsSystemWindows="true"
        tools:context="com.example.owner.frenchpress.MainActivity">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:padding="10dp"
            android:elevation="2dp"
            android:id="@+id/top_container"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/txt_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:shadowColor="@color/colorDarkGrey"
                android:shadowDy="3"
                android:text="Hello, John"
                android:textColor="@color/colorLightWhite"
                android:textSize="36dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linLayoutNxtRoutine"
                android:orientation="horizontal"
                android:layout_below="@+id/txt_page"
                android:padding="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorLightWhite"
                    android:text="@string/next_routine"
                    android:layout_weight="0.3"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="24dp"
                    android:textColor="@color/colorLightWhite"
                    android:text="Tomorrow Morning at 7:30 AM"
                    android:layout_weight="0.70"/>


            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp"
            android:layout_below="@id/top_container"
            android:background="@color/colorLightWhite">

            <LinearLayout
                android:id="@+id/routines_main_LinLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                // coffee levels card
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="20dp"
                    android:elevation="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:textSize="35dp"
                            android:textColor="@color/colorPrimary"
                            android:text="Coffee Level:"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textAlignment="viewEnd"
                            android:layout_weight="0.2"
                            android:textSize="35dp"
                            android:textColor="@color/green"
                            android:text="Full"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                // water levels card
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="20dp"
                    android:elevation="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.33"
                            android:textSize="35dp"
                            android:textColor="@color/colorPrimary"
                            android:text="Water Level:"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textAlignment="viewEnd"
                            android:layout_weight="0.24"
                            android:textSize="35dp"
                            android:textColor="@color/green"
                            android:text="9/12"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <Button
                    android:id="@+id/btn_brew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/colorPrimary"
                    android:padding="8dp"
                    android:text="@string/quick_brew"
                    android:textColor="@color/colorLightWhite"
                    android:textSize="20dp"/>

            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>